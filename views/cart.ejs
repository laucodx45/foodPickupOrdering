<!DOCTYPE html>
<html lang="en">

<head>
  <title>Cart</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/_header.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
    <main>
      <!-- FOOD ITEMS LIST -->
      <% for (let item of foodItems) { %>
        <div class="foodItem">
          <div id="foodDisplay">
            <img src="https://www.allrecipes.com/thmb/0xH8n2D4cC97t7mcC7eT2SDZ0aE=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/6776_Pizza-Dough_ddmfs_2x1_1725-fdaa76496da045b3bdaadcec6d4c5398.jpg" />
            <!-- <img src="<%= item.thumbnail_url %>"/> -->
            <div id ="foodInformation">
              <p><%= item.name %> <%= item.price %></p>
              <p class="foodItemDescription"><%= item.description %></p>
            </div>
          </div>
          <form action="/order/:orderID" method="POST">
            <input type="number" id="quantity" name="quantity" step="1" min="1"/>
            <button type="submit">Update</button>
            <button type="submit">Remove</button>
          </form>
        </div>
      <% } %>
      <!-- END OF FOOD ITEMS LIST -->
      <form>
        <div class="confirmation_bar">
          <button>CANCEL</button>
          <button>SUBMIT</button>
        </div>
      </form>
    </main>
</body>

</html>
