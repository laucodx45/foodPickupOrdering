<!DOCTYPE html>
<html lang="en">

<head>
  <title>Cart</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/_header.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>
    <main>
      <!-- FOOD ITEMS LIST -->
      <% for (let item of foodItems) { %>
        <% if (!item.placed_at) { %>
          <div class="foodItem">
            <div id="foodDisplay">
              <img src="<%= item.thumbnail_photo_url%>" />
              <!-- <img src="<%= item.thumbnail_url %>"/> -->
              <div id ="foodInformation">
                <p><%= item.name %>  â€¢ $<%= item.price %></p>
                <p class="foodItemDescription"><%= item.description %></p>
              </div>
            </div>
            <div class="editCart">
              <form action="/updateQuantity/<%= orderID %>" method="POST">
                <input type="number" id="quantity" name="quantity" value="<%= item.quantity %>" step="1" min="1"/>
                <input type="hidden" name="order_contents_id" value="<%= item.order_contentsid %>"/>
                <button type="submit">Update</button>
              </form>
              <form action="/removeFoodItem/<%= orderID%>" method="POST">
                <input type="hidden" name="foodItemName" value="<%= item.name%>">
                <button type="submit">Remove</button>
              </form>
            </div>
          </div>
        <% } %>
      <% } %>
      <!-- END OF FOOD ITEMS LIST -->
        <div class="subtotal_box">
          <p>SubTotal: </p>
          <p>$<%= subtotal %></p>
        </div>
        <div class="confirmation_bar">
          <form action="/users/cancelOrder/<%= orderID %>" method="POST">
            <button type="submit">CANCEL ORDER</button>
          </form>
          <form action="/users/submitOrder/<%= orderID %>" method="POST">
            <button type="submit">SUBMIT</button>
          </form>
        </div>
    </main>
</body>

</html>
